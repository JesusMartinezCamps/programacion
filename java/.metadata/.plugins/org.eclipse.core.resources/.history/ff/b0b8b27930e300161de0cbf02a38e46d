package org.foobarspam.esBisiesto.testing;

import static org.junit.Assert.*;

import org.junit.Test;

import org.foobarspam.esBisiesto.year.*;

public class YearTesting {

	/*Año bisiesto si:
	 * 
	 * Es divisible entre 4
	 * Es divisible entre 100 SALVO:
	 */
	@Test
	public void test_esBisiesto_cuatro() {
		/* Orden:
		 * Nombre clase, nuevo nombre = creacion con el nombre de la clase (lo que nos pasan)
			  Year 			any 	  = 	new Year						(1904)*/
		Year any = new Year(1910);
		assertEquals("Test año bisiesto acabado en 4", true, any.esBisiesto());
	}
	
	@Test
	public void test_esBisiesto_seis() {
		/* clase, año, creacion de clase año (lo que nos pasan)*/
		Year any = new Year(2016);
		assertEquals("Test año bisiesto acabado en 6", true, any.esBisiesto());
	}
	
	@Test
	public void test_esBisiesto_100() {
		/* clase, año, creacion de clase año (lo que nos pasan)*/
		Year any = new Year(1900);
		assertEquals("Test año bisiesto acabado en 100, ", true, any.acaba100());
	}
}

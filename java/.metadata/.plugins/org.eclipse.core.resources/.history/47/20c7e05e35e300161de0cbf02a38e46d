package org.foobarspam.esBisiesto.year;

public class Year {

	private int year = 0;
	
	/*Constructor que recibe un año*/
	public Year(int year){
		this.year = year;
	}
	
	/*getters y setters*/
	public int getYear(){
		return this.year;
	}
	
	/*El metodo esBisiesto*/
	public Boolean esBisiesto_cuatro(){
		return getYear() % 4 == 0;
	}
	
	/*Comprueba si el año termina en 100*/
	public Boolean esBisiesto_cien(){
		return getYear() % 100 == 0;
	}
	
	/*Determina si es bisiesto porque se cumplen las anteriores condiciones*/
	public Boolean esBisiesto(){
		if(getYear() % 100 == 0){
			if(getYear() % 400 == 0){
				return true;
			}else{
				return false;
			}
		}if(getYear() % 4 == 0){
			return true;
		}else{
			return false;
		}
	}
}
